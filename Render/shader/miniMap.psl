struct PS_INPUT
{
	float2 uv0:TEXCOORD0;
#ifdef USE_WATER
	float2 uv1:TEXCOORD1;
#endif
#ifdef USE_FOGOFWAR
	float2 uv2:TEXCOORD2;
#endif
	float4 color: COLOR0;
};

sampler2D baseTexture:register(s0);
#ifdef USE_WATER
sampler2D waterTexture:register(s1);
float3 waterColor:register(c0);
#endif
#ifdef USE_FOGOFWAR
sampler2D fogOfWarTexture:register(s2);
#endif
float4 fogAlpha:register(c1);
#ifdef USE_TERRA_COLOR
float4 terraColor:register(c2);
#endif

float4 main(const PS_INPUT v):COLOR
{
  float4 o;
  float3 fa={0,0,0};
#ifdef USE_TERRA_COLOR
  o=terraColor;
#else
  o=tex2D(baseTexture,v.uv0);
#endif
#ifdef USE_WATER  
  float3 wa=tex2D(waterTexture,v.uv1);
  o.rgb = lerp(o.rgb,waterColor,wa);
#endif
#ifdef USE_FOGOFWAR
  fa=tex2D(fogOfWarTexture,v.uv2);
#endif
  o.a = v.color.a-v.color.a*fa.z*fogAlpha.a;
  return o;
}

 
